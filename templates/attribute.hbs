<li class="styleitem">
    <p>{{{message}}}{{{message1}}}{{{message2}}}{{{message3}}}</p>
    {{#ifTypeof jscs "[object Array]"}}
    <ul class="jscslist">
        {{#each jscs}}
            <li>"{{ this }}"</li>
        {{/each}}
    </ul>
    {{/ifTypeof}}
    {{#if jscs.allExcept}}
        <p>An exception is made for the following:</p>
        <ul>
            {{#each jscs.allExcept}}
                <li>"{{ this }}"</li>
            {{/each}}
        </ul>
    {{/if}}
    {{#if example}}
        <div class="example">
            <span class="heading"><span>EXAMPLE</span></span>
            <pre><code class="lang-js">{{example}}</code></pre>
        </div>
    {{/if}}
    {{#if right}}
        <div class="right">
            <span class="heading"><span>VALID</span></span>
            <pre><code class="lang-js">{{right}}</code></pre>
        </div>
    {{/if}}
    {{#if wrong}}
        <div class="wrong">
            <span class="heading"><span>INVALID</span></span>
            <pre><code>{{wrong}}</code></pre>
        </div>
    {{/if}}
</li>
